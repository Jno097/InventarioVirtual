    <script>
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.innerHTML = `<img src="${e.target.result}" alt="Vista previa" style="max-width: 100%; height: 250px; object-fit: cover; border-radius: 15px;">`;
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }
        
        // Validaci√≥n en tiempo real
        document.getElementById('stock').addEventListener('input', function() {
            const value = parseInt(this.value);
            const statValue = document.querySelector('.stat-value');
            
            if(!isNaN(value)) {
                statValue.textContent = value;
                statValue.style.color = value > 0 ? '#28a745' : '#dc3545';
            }
        });
        
        // Confirmaci√≥n antes de abandonar la p√°gina si hay cambios
        let formChanged = false;
        const formElements = document.querySelectorAll('input, select, textarea');
        
        formElements.forEach(element => {
            element.addEventListener('change', function() {
                formChanged = true;
            });
        });
        
        window.addEventListener('beforeunload', function(e) {
            if(formChanged) {
                e.preventDefault();
                e.returnValue = '';
            }
        });
        
        // Resetear flag cuando se env√≠a el formulario
        document.querySelector('form').addEventListener('submit', function() {
            formChanged = false;
        });
    </script>
